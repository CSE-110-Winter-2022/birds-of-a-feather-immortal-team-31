<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonOpenHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonOpenHistoryClicked"
        android:text="Input new classes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_mutual_classes_button"
        app:layout_constraintVertical_bias="0.773" />

    <Button
        android:id="@+id/view_mutual_classes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:onClick="onViewMutualCoursesClicked"
        android:text="View mutual classes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="147dp"
        android:layout_height="59dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="138dp"
        android:onClick="onButtonSignInClicked"
        android:text="Sign-in"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpenHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_mutual_classes_button"
        app:layout_constraintVertical_bias="0.363" />
</androidx.constraintlayout.widget.ConstraintLayout>