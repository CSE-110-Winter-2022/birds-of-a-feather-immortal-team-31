<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonOpenHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonOpenHistoryClicked"
        android:text="Input new classes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_mutual_classes_button"
        app:layout_constraintVertical_bias="0.579" />

    <Button
        android:id="@+id/view_mutual_classes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:onClick="onViewMutualCoursesClicked"
        android:text="View mutual classes"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpenHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_view" />

    <Button
        android:id="@+id/Search_for_classmates"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="39dp"
        android:onClick="onSearchForClassmatesClicked"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/users_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users_view"
        android:layout_width="421dp"
        android:layout_height="287dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/view_mutual_classes_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Search_for_classmates" />

</androidx.constraintlayout.widget.ConstraintLayout>